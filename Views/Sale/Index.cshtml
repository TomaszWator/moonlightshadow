                                @Html.ValidationMessageFor(o => o.Camera.Brand)
                            </div>
                        </div>

                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                @Html.LabelFor(o => o.Camera.Model)
                                @Html.TextBoxFor(o => o.Camera.Model, new { @class="form-control", @placeholder="Wprowadź model" })
                                @Html.ValidationMessageFor(o => o.Camera.Model)
